@model BookMyShowEntity.User

<form method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
        <label for="FirstName">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName">
    </div>
    <div class="form-group">
        <label for="FirstName">Email Id</label>
        <input type="text" class="form-control" asp-for="Email">
    </div>
    <div class="form-group">
        <label for="FirstName">Password</label>
        <input type="text" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <label for="FirstName">Mobile</label>
        <input type="text" class="form-control" asp-for="Mobile">
    </div>
    <input type="submit" class="btn btn-primary" value="Register">
    <button type="button" class="btn btn-secondary">Reset</button>
    <hr />
    @if (ViewBag.status == "Ok")
    {
            <div class="alert alert-success">
            @ViewBag.message
            </div>
    }
    else if (ViewBag.status == "Error")
    {
            <div class="alert alert-danger">
            @ViewBag.message
            </div>
    }
    <hr />
    <a asp-controller="User" asp-action="Login">Login</a>
</form>

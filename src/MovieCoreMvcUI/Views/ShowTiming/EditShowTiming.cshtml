@model BookMyShowEntity.ShowTiming
@{
    ViewData["Title"] = "EditShowTiming";
}

<div>
    <hr />
    <a asp-controller="ShowTiming" asp-action="Index">Go to Show Timing Index</a>
    <hr />
</div>
<hr />
<form method="post" enctype="multipart/form-data">
    <h2 align="center">Edit Show Timing</h2><hr />
    <div class="form-group">
        <label>Show Timing Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Enter Show Timing Id" required />
    </div>
    <div class="form-group">
        <label>Movie Name</label>
        <select asp-for="MovieId" asp-items="@ViewBag.movieidlist" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Theatre Name</label>
        <select asp-for="TheatreId" asp-items="@ViewBag.theatreidlist" class="form-control" required></select>
    </div>
    @*<div class="form-group">
        <label>Movie Id</label>
        <input type="text" asp-for="MovieId" class="form-control" placeholder="Enter Movie Id" required />
    </div>
    <div class="form-group">
        <label>Theatre Id</label>
        <input type="text" asp-for="TheatreId" class="form-control" placeholder="Enter Theatre Id" required />
    </div>*@
    <div class="form-group">
        <label>Show Time</label>
        <input type="datetime-local" asp-for="ShowTime" class="form-control" placeholder="Enter Show Time" required />
    </div>

    <input type="submit" value="Update" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>




@model BookMyShowEntity.Booking

<div>
    <hr />
    <a asp-controller="Booking" asp-action="Index">Go to Booking Index</a>
    <hr />
</div>
<hr />
<form method="post" enctype="multipart/form-data">
    <h2 align="center">Edit Booking</h2><hr />
    <div class="form-group">
        <label>Booking Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Enter Booking Id" required />
    </div>
    <div class="form-group">
        <label>User Name</label>
        <select asp-for="UserId" asp-items="@ViewBag.useridlist" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Show Time</label>
        <select asp-for="ShowTimingId" asp-items="@ViewBag.showtimeidlist" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label>Number of Seats</label>
        <input type="number" asp-for="Quantity" min="1" max="10" class="form-control" placeholder="Enter Number of Seats" required />
    </div>
    <input type="submit" value="Update" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
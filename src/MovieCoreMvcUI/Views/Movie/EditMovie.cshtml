@model BookMyShowEntity.Movie
@{
    ViewData["Title"] = "EditMovie";
}
<div>
    <hr />
    <a asp-controller="Movie" asp-action="Index">Go to Movie Index</a>
    <hr />
</div>
<hr/>
<form method="post" enctype="multipart/form-data">
    <h2 align="center">Edit Movie</h2><hr />
    <div class="form-group">
        <label>Movie Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Enter Movie Id" required />
    </div>    
    <div class="form-group">
        <label>Movie Name</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Movie Name" required />
    </div>
    <div class="form-group">
        <label>Movie Description</label>
        <input type="text" asp-for="MovieDesc" class="form-control" placeholder="Enter Movie Description" required />
    </div>
    <div class="form-group">
        <label>Movie Type</label>
        <input type="text" asp-for="MovieType" class="form-control" placeholder="Enter Movie Type" required />
    </div>
    <div class="form-group">
        <label>Movie Poster</label>
        <input type="file" id="poster" name="poster"  class="form-control" required />
    </div>
    <div class="form-group">
        <label>Movie Price</label>
        <input type="number" asp-for="MoviePrice" class="form-control" placeholder="Enter Movie Price" required />
    </div>
    <input type="submit" value="Update" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>


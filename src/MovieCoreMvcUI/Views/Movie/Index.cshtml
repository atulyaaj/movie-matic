<div>
    <hr/>
    <a asp-controller="Movie" asp-action="MovieEntry">Movie Entry</a>
    <hr/>
</div>
<div class="row">
    <div class="col-12">
        <h3 align="center">Movie List</h3>
        <hr/>
        <table class="table table-light table-bordered table-hover">
            <thead>
                <tr>
                    <th>Movie Id</th>
                    <th>Movie Name</th>
                    <th>Movie Description</th>
                    <th>Movie Type</th>
                    <th>Movie Price</th>
                    <th>Movie Poster</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var movie in Model)
                {
                    string imageBase64Data = Convert.ToBase64String(movie.ImgPoster);
                    string imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
                    <tr>
                        <td>@movie.Id</td>
                        <td>@movie.Name</td>
                        <td>@movie.MovieDesc</td>
                        <td>@movie.MovieType</td>
                        <td>@movie.MoviePrice</td>
                        <td><img height="50" width="50" src="@imageDataURL" /></td>
                        <td><a asp-controller="Movie" asp-action="EditMovie" asp-route-MovieId="@movie.Id">Edit</a></td>
                        <td><a asp-controller="Movie" asp-action="DeleteMovie" asp-route-MovieId="@movie.Id">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>





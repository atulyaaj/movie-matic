@model BookMyShowEntity.Theatre
@{
    ViewData["Title"] = "DeleteTheatre";
}
<div>
    <hr />
    <a asp-controller="Theatre" asp-action="Index">Go to Theatre Index</a>
    <hr />
</div>
<hr />
<form method="post" enctype="multipart/form-data">
    <h2 align="center">Delete Theatre</h2><hr />
    <div class="form-group">
        <label>Theatre Id</label>
        <input type="text" asp-for="Id" class="form-control" placeholder="Enter Theatre Id" required />
    </div>
    <input type="submit" value="Delete" class="btn btn-outline-danger" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

